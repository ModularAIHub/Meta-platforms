# ==========================================
# DATABASE
# ==========================================
DATABASE_URL=postgresql://username:password@host:port/database
DB_SSL=false

# ==========================================
# JWT & SECURITY
# ==========================================
JWT_SECRET=your-secure-jwt-secret

# ==========================================
# ENVIRONMENT & URLS
# ==========================================
NODE_ENV=development
PORT=3006
CLIENT_URL=http://localhost:5176
PLATFORM_URL=http://localhost:5173
NEW_PLATFORM_API_URL=http://localhost:3000/api
COOKIE_DOMAIN=.suitegenie.in

# ==========================================
# OPENAI
# ==========================================
OPENAI_API_KEY=your-openai-key
OPENAI_MODEL=gpt-4o-mini
AI_CAPTION_MAX_CHARS=500
INSTAGRAM_CAPTION_MAX_CHARS=2200
THREADS_TEXT_MAX_CHARS=500
YOUTUBE_CAPTION_MAX_CHARS=5000

# ==========================================
# INSTAGRAM OAUTH
# ==========================================
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret
INSTAGRAM_REDIRECT_URI=http://localhost:3006/api/oauth/instagram/callback
INSTAGRAM_API_VERSION=v23.0
INSTAGRAM_SCOPES=instagram_business_basic,instagram_business_content_publish,pages_show_list,business_management
THREADS_API_VERSION=v1.0
THREADS_SCOPES=threads_basic,threads_content_publish
PUBLIC_BASE_URL=

# ==========================================
# YOUTUBE OAUTH
# ==========================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
YOUTUBE_REDIRECT_URI=http://localhost:3006/api/oauth/youtube/callback
YOUTUBE_SCOPES=https://www.googleapis.com/auth/youtube.upload https://www.googleapis.com/auth/youtube.readonly https://www.googleapis.com/auth/yt-analytics.readonly

# ==========================================
# DEV HELPERS
# ==========================================
SOCIAL_MOCK_OAUTH=false
ENABLE_TEAM_CREDITS=true
CREDIT_USE_PLATFORM_API=false
CREDIT_FALLBACK_TO_LOCAL_DB=true
CREDIT_DEBUG=false
CREDIT_COST_SOCIAL_AI_CAPTION=1.2
CREDIT_COST_SOCIAL_POST_CREATE=0
CREDIT_COST_SOCIAL_POST_SCHEDULE=0
CREDIT_COST_SOCIAL_POST_PLATFORM_EXTRA=0
CREDIT_COST_SOCIAL_POST_CROSS_POST_EXTRA=0

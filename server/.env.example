NODE_ENV=development
PORT=3006
CLIENT_URL=http://localhost:5176
PLATFORM_URL=http://localhost:5173
PUBLIC_BASE_URL=http://localhost:3006

DATABASE_URL=postgresql://user:password@host:5432/dbname
DB_SSL=false
JWT_SECRET=replace-with-strong-secret

# AI
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini
PERPLEXITY_API_KEY=
PERPLEXITY_MODEL=sonar
GOOGLE_AI_API_KEY=
GOOGLE_AI_MODEL=gemini-2.5-flash
AI_PROVIDER_PRIORITY=perplexity,google,openai
AI_PROVIDER_MAX_RETRIES=2
AI_PROVIDER_TIMEOUT_MS=30000
AI_CAPTION_MAX_CHARS=500
INSTAGRAM_CAPTION_MAX_CHARS=2200
THREADS_TEXT_MAX_CHARS=500
THREADS_AUTO_SPLIT_MAX_CHARS=10000
THREADS_MAX_CHAIN_POSTS=30
YOUTUBE_CAPTION_MAX_CHARS=5000

# Instagram OAuth
INSTAGRAM_APP_ID=
INSTAGRAM_APP_SECRET=
INSTAGRAM_REDIRECT_URI=http://localhost:3006/api/oauth/instagram/callback
INSTAGRAM_API_VERSION=v23.0
INSTAGRAM_SCOPES=instagram_business_basic,instagram_business_content_publish,pages_show_list,business_management

# Threads OAuth
# Preferred: separate Threads app credentials.
# Fallback: if THREADS_APP_ID/THREADS_APP_SECRET are empty, server uses INSTAGRAM_APP_ID/INSTAGRAM_APP_SECRET.
THREADS_APP_ID=
THREADS_APP_SECRET=
THREADS_REDIRECT_URI=http://localhost:3006/api/oauth/threads/callback
THREADS_API_VERSION=v1.0
THREADS_SCOPES=threads_basic,threads_content_publish

# YouTube OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
YOUTUBE_REDIRECT_URI=http://localhost:3006/api/oauth/youtube/callback
YOUTUBE_SCOPES=https://www.googleapis.com/auth/youtube.upload https://www.googleapis.com/auth/youtube.readonly https://www.googleapis.com/auth/yt-analytics.readonly

# Dev helpers
SOCIAL_MOCK_OAUTH=false
MAX_FILE_SIZE=104857600
SOCIAL_SCHEDULE_WORKER_ENABLED=true
SOCIAL_SCHEDULE_WORKER_POLL_MS=15000
SOCIAL_SCHEDULE_WORKER_BATCH_SIZE=5

# Credits
ENABLE_TEAM_CREDITS=true
CREDIT_USE_PLATFORM_API=false
CREDIT_FALLBACK_TO_LOCAL_DB=true
CREDIT_DEBUG=false
CREDIT_COST_SOCIAL_AI_CAPTION=1.2
CREDIT_COST_SOCIAL_POST_CREATE=0
CREDIT_COST_SOCIAL_POST_SCHEDULE=0
CREDIT_COST_SOCIAL_POST_PLATFORM_EXTRA=0
CREDIT_COST_SOCIAL_POST_CROSS_POST_EXTRA=0
